@model EmployeeEditViewModel

@{
    ViewData["Title"] = "Edit View";
}

<section class="ms-4">
<h1 class="text-center">@ViewData["Title"]</h1>

    <div class="row d-flex justify-content-center align-items-center">
            <div class="col-md-4">
                <form asp-action="Edit" method="post" asp-route-id="@Model.Id">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" name="Id" value="@Model.Id" asp-for="Id" />
                    <input type="hidden" name="_method" value="PUT" />
                    <div class="form-group mb-2">
                        @*<label asp-for="empName" class="control-label"></label>*@
                        <input asp-for="empName" class="form-control" placeholder="Employee Name"/>
                        <span asp-validation-for="empName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                    @*<label asp-for="empAge" class="control-label"></label>*@
                        <input asp-for="empAge" class="form-control" placeholder="Employee Age"/>
                        <span asp-validation-for="empAge" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                    @*<label asp-for="empNumber" class="control-label"></label>*@
                        <input asp-for="empNumber" class="form-control" placeholder="Employee Mobile Number"/>
                        <span asp-validation-for="empNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                    @*<label asp-for="empDepartment" class="control-label"></label>*@
                        <input asp-for="empDepartment" class="form-control" placeholder="Employee Department"/>
                        <span asp-validation-for="empDepartment" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    <a class="back text-decoration-none text-dark btn" asp-action="Index">Back to List</a>
                    </div>
                </form>
            </div>
    </div>

</section>
